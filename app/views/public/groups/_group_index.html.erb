<table class="table">
<thead>
  <tr>
    <th class="text-center">グループ名</th>
    <th class="text-center">説明</th>
    <th class="text-center">メンバー数</th>
    <th class="text-center">作成日時</th>
    <th></th> <%# アクションボタン %>
  </tr>
</thead>
<tbody>
  <% groups.each do |group| %>
    <tr>
      <td class="col-3 text-center align-middle">
        <%= link_to group.name, group_path(group), class: "text-secondary" %>
      </td>
      <td class="col-4 text-center align-middle"><%= group.description.truncate(25) %></td>
      <td class="col-2 text-center align-middle"><%= group.group_users.count %></td>
      <td class="col-2 text-center align-middle"><%= l(group.created_at, format: :long) %></td>
      <td></td>
    </tr>
  <% end %>
</tbody>
</table>
