<%= content_for :css do %>
  <%= stylesheet_link_tag 'public/posts/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'public/users/index', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% if @posts.present? %>
  <%= render 'public/posts/posts_index', posts: @posts %>
<% else %>
  <%= render 'public/users/users_index', users: @users %>
<% end %>

<%= javascript_pack_tag 'posts/category_switch' %>