<%= content_for :css do %>
  <%= stylesheet_link_tag 'public/posts/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% if @posts.present? %>
  <%= render 'public/posts/posts_index', posts: @posts %>
<% elsif @users.present? %>
  <%= render 'common/users_index', users: @users %>
<% elsif @groups.present? %>
  <%= render template: 'public/groups/index', groups: @groups %>
<% end %>

<%= javascript_pack_tag 'posts/category_switch' %>