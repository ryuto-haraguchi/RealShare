<%= content_for :css do %>
  <%= stylesheet_link_tag 'public/posts/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="container mt-5">
  <div class="row text-center">
    <div class="col">投稿検索</div>
    <div class="col">絞り込み</div>
    <div class="col">ソート</div>
    <div class="col">MAP</div>
  </div>
  <div class="row mt-5">
    <div class="col-12">
      <%= render 'public/posts/post_list', posts: @posts %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'posts/category_switch' %>
