<% content_for :css do %>
  <%= stylesheet_link_tag 'public/registrations_sessions/new', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= form_with(model: resource, url: session_path(resource_name), local: true) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-6 offset-3 text-center">
        <h2 class="sign-up-title">ログイン</h2>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-3 offset-md-3 text-center">
        <%= f.label :email, "メールアドレス", class: "label" %>
      </div>
      <div class="col-md-3 text-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "chiiki@example.com" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-3 offset-md-3 text-center">
        <%= f.label :password, "パスワード", class: "label" %>
      </div>
      <div class="col-md-3 text-center">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row mt-3">
        <div class="col-md-6 offset-md-3 text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "label" %>
        </div>
      </div>
    <% end %>

    <div class="row mt-3">
      <div class="col-md-6 offset-md-3 text-center">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-sign-up" %>
        </div>
      </div>
    </div>
    <div class="row mt-5 mb-5">
      <div class="col-md-6 offset-md-3 text-center">
        <p class="mb-1">アカウントをお持ちでないですか？</p><br>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
